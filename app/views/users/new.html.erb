<%= form_for(:user, url: { action: "create" })  do |f| %>
 <%= f.label :username, 'Username: '%>
 <%= f.text_field :username %>
 <%= f.label :email, 'Email: ' %>
 <%= f.email_field :email %>
 <%= f.label :password, 'Password: ' %>
 <%= f.password_field :password %>
 <%= f.label :password_confirmation %>
 <%= f.password_field :password_confirmation %>
 <%= f.submit 'Submit'%>
<% end %>
